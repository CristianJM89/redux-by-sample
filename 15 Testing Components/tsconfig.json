{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "react",
    "sourceMap": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "webpack-env",      
      "mocha",
      "sinon",
      "sinon-test",
      "karma-chai-sinon"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
